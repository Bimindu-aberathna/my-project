// Import necessary modules and functions
import axios from 'axios';

const getHourForCity = async (city) => {
  try {
    const response = await axios.get(`http://worldtimeapi.org/api/timezone/${city}`);
    const { datetime, timezone } = response.data;

    const hour = new Date(datetime).getUTCHours(); // Extract hour from the UTC time

    console.log(`Current hour in ${timezone}: ${hour}`);
    return hour;
  } catch (error) {
    console.error('Error fetching hour:', error);
    return null;
  }
};

// Example usage
export default getHourForCity;

